# Example Environment Configuration
# Copy this to .env.local for local development or .env.production for production

NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:your_password@localhost:5433/digestgenie_dev
DB_PASSWORD=your_password
POSTGRES_DB=digestgenie_dev

# NextAuth
NEXTAUTH_SECRET=your-secret-here-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# BasePath (empty for local, /DigestGenie for production)
NEXT_PUBLIC_BASE_PATH=

# APIs
ANTHROPIC_API_KEY=sk-ant-your-key
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# n8n
N8N_ENCRYPTION_KEY=your-n8n-key-min-32-chars
WEBHOOK_URL=http://localhost:5678
INTERNAL_API_KEY=your-internal-key

# Email
EMAIL_DOMAIN=newsletters.localhost

# Admin
ADMIN_EMAILS=admin@example.com

# Features
ENABLE_AI_FEATURES=true
ENABLE_2FA=true
FREE_PLAN_MAX_NEWSLETTERS=3
