# .env.example - Environment variables configuration

# Database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/newsletter_aggregator
DB_PASSWORD=your_secure_db_password

# Redis
REDIS_URL=redis://localhost:6379

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-min-32-chars
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI for AI features
OPENAI_API_KEY=sk-your-openai-api-key

# Email Domain for system emails
EMAIL_DOMAIN=newsletters.yourdomain.com

# Internal API Key for n8n communication
INTERNAL_API_KEY=your-internal-api-key-for-n8n-webhooks

# n8n Configuration
N8N_ENCRYPTION_KEY=your-n8n-encryption-key-min-32-chars
WEBHOOK_URL=http://localhost:5678

# Postal Mail Server (Optional - for advanced email processing)
POSTAL_API_URL=http://localhost:80
POSTAL_API_KEY=your-postal-api-key
POSTAL_DB_PASSWORD=your-postal-db-password

# Application Settings
NODE_ENV=development
PORT=3000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_2FA=true
ENABLE_ADMIN_PANEL=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Email Processing
MAX_EMAILS_PER_HOUR=1000
EMAIL_PROCESSING_QUEUE_CONCURRENCY=5

# Subscription Limits (Free Plan)
FREE_PLAN_MAX_NEWSLETTERS=3
FREE_PLAN_MAX_ARTICLES_PER_MONTH=1000

# Analytics (Optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn
HEALTH_CHECK_ENABLED=true

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=info